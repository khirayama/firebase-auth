{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rm -rf src/public",
    "start": "npm run clean && npm run bundle:scripts && npm run build:styles && npm run server",
    "dev": "npm run clean && concurrently 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run server:dev'",
    "server": "NODE_PATH=src ts-node src/index.ts",
    "server:dev": "NODE_PATH=src nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "bundle:scripts": "NODE_ENV=production webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "bundle:scripts:analyze": "NODE_ENV=production ANALYSIS=true webpack --mode production",
    "build:styles": "postcss -c .postcssrc.js 'src/presentations/**/index.css' --base src/presentations --dir './src/public'",
    "build:styles:watch": "postcss -c .postcssrc.js -w 'src/presentations/**/index.css' --base src/presentations --dir './src/public'",
    "build:images": "node bin/minimize-images.js",
    "lint": "tslint --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' 'test/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' bin webpack.config.js .eslintrc.js .postcssrc.js",
    "precommit": "npm run lint:fix && npm run format",
    "test": "NODE_PATH=src mocha --require espower-typescript/guess src/**/*.spec.ts",
    "check": "npx npm-check-updates"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "0.18.0",
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "express": "4.16.3",
    "pug": "2.0.3"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "10.5.7",
    "concurrently": "3.6.1",
    "cpx": "1.5.0",
    "cssnano": "4.0.5",
    "espower-typescript": "9.0.0",
    "mocha": "5.2.0",
    "nodemon": "1.18.3",
    "postcss-cli": "6.0.0",
    "postcss-import": "12.0.0",
    "postcss-nested": "3.0.0",
    "postcss-simple-vars": "4.1.0",
    "power-assert": "1.6.0",
    "prettier": "1.14.0",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "tslint-microsoft-contrib": "5.1.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "3.0.1",
    "webpack": "4.16.5",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.1.0"
  }
}
